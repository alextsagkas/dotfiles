// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "diagnostics": {
    "include_warnings": true,
    "lsp_pull_diagnostics": {
      "enabled": true
    }
  },
  "telemetry": {
    "diagnostics": true,
    "metrics": true
  },
  "disable_ai": false,
  "buffer_font_family": "Fira Mono",
  "relative_line_numbers": "disabled",
  "session": {
    "trust_all_worktrees": true
  },
  "buffer_font_size": 12.0,
  "buffer_line_height": {
    "custom": 1.5
  },
  "active_pane_modifiers": {
    "border_size": 0.0
  },
  "languages": {
    "Make": {
      "hard_tabs": true
    }
  },
  "extend_comment_on_newline": true,
  "zoomed_padding": false,
  "centered_layout": {
    "left_padding": 0.2
  },
  "git": {
    "branch_picker": {
      "show_author_name": true
    },
    "inline_blame": {
      "enabled": false
    }
  },
  "use_system_window_tabs": false,
  "bottom_dock_layout": "contained",
  "seed_search_query_from_cursor": "never",
  "inlay_hints": {
    "enabled": true,
    "show_background": false
  },
  "always_treat_brackets_as_autoclosed": true,
  "auto_indent": false,
  "toolbar": {
    "code_actions": false,
    "agent_review": true,
    "selections_menu": true,
    "quick_actions": false,
    "breadcrumbs": true
  },
  "scrollbar": {
    "diagnostics": "all"
  },
  "sticky_scroll": {
    "enabled": true
  },
  "autoscroll_on_clicks": false,
  "redact_private_values": false,
  "use_system_path_prompts": true,
  "file_finder": {
    "modal_max_width": "large",
    "include_ignored": "all"
  },
  "show_whitespaces": "selection",
  "gutter": {
    "min_line_number_digits": 4
  },
  "hard_tabs": false,
  "colorize_brackets": true,
  "tab_bar": {
    "show_pinned_tabs_in_separate_row": true,
    "show_tab_bar_buttons": false,
    "show_nav_history_buttons": false,
    "show": true
  },
  "indent_guides": {
    "enabled": false,
    "background_coloring": "indent_aware",
    "coloring": "indent_aware"
  },
  "notification_panel": {
    "default_width": 320.0
  },
  "agent_buffer_font_size": 12.0,
  "ui_font_weight": 400.0,
  "preview_tabs": {
    "enabled": false,
    "enable_keep_preview_on_code_navigation": false,
    "enable_preview_from_file_finder": false
  },
  "tabs": {
    "git_status": true,
    "file_icons": false
  },
  "search": {
    "center_on_match": true,
    "include_ignored": true,
    "regex": true
  },
  "show_edit_predictions": true,
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "agent": {
    "notify_when_agent_waiting": "never",
    "default_profile": "ask",
    "default_width": 320.0,
    "dock": "right",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gemini-3-pro-preview"
    }
  },
  "edit_predictions": {
    "disabled_globs": [],
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "restore_on_startup": "launchpad",
  "vim_mode": true,
  "base_keymap": "VSCode",
  "theme": "JetBrains Dark",
  "ui_font_size": 14.0,
  "agent_ui_font_size": 14.0,
  "ui_font_family": "Fira Mono",
  "debugger": {
    "stepping_granularity": "line"
  },
  "file_scan_exclusions": [],
  "format_on_save": "off",
  "remove_trailing_whitespace_on_save": true,
  "title_bar": {
    "show_menus": false,
    "show_branch_icon": true
  },
  "project_panel": {
    "auto_fold_dirs": true,
    "file_icons": true,
    "entry_spacing": "standard",
    "default_width": 320,
    "indent_size": 18.0,
    "indent_guides": {
      "show": "always"
    },
    "hide_root": true
  },
  "git_panel": {
    "tree_view": false,
    "status_style": "icon",
    "sort_by_path": false,
    "default_width": 320
  },
  "outline_panel": {
    "indent_size": 18.0,
    "indent_guides": {
      "show": "always"
    },
    "default_width": 320.0,
    "button": false
  },
  "collaboration_panel": {
    "default_width": 320.0,
    "button": false
  },
  "terminal": {
    "toolbar": {
      "breadcrumbs": false
    },
    "max_scroll_history_lines": 100000,
    "working_directory": "current_project_directory",
    "font_family": "MesloLGS NF",
    "font_size": 12.0,
    "default_height": 420,
    "detect_venv": "off"
  },
